{
  "name": "panda-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "init": "pnpm install",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint:ts-fix": "biome lint --write --max-diagnostics=100 ./ --config-path ./biome.json",
    "format": "biome format --write ./ --config-path ./biome.json",
    "update:deps": "npx taze major -w && pnpm run init",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@amap/amap-jsapi-loader": "^1.0.1",
    "@ant-design/icons": "^6.0.0",
    "@chapanda/style-preset": "^1.4.9",
    "@heroui/tooltip": "^2.2.16",
    "@heroui/button": "latest",
    "@heroui/form": "latest",
    "@heroui/input": "latest",
    "@heroui/toast": "latest",
    "ahooks": "^3.8.4",
    "dayjs": "^1.11.12",
    "motion": "^12.7.4",
    "next": "^15.3.1",
    "next-intl": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swiper": "^11.2.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/swiper": "latest",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.0.3",
    "postcss": "^8.5.3",
    "postcss-px-to-viewport": "^1.1.1",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "@biomejs/biome": "1.8.3",
    "simple-git-hooks": "^2.8.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome lint --write --max-diagnostics=100 ./ --config-path ./biome.json",
      "biome format --write ./ --config-path ./biome.json"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "node vertify-commit.js"
  }
}
